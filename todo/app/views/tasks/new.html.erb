<h1>New Task Page</h1>
<p>Create a new task.</p>

<%= @current_task.errors.full_messages.to_sentence %>

<%= form_for @current_task, url: {controller: "tasks", action: "create"} do |form| %>
  <%= form.text_field :name %>
  <%= form.text_area :description, size: "24x6" %>
  <%= form.submit "Create task" %>
<% end %>
