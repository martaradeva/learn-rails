<h1><%= I18n.t ('new_task_page')%></h1>
<p class="text-info"><%= I18n.t ('new_task_description')%></p>

<%= @current_task.errors.full_messages.to_sentence %>

<%= form_for @current_task, url: {controller: "tasks", action: "create"}, html: {:class => "form-task" } do |form| %> 
  <%= I18n.t ('name')%>        :<br> <%= form.text_field :name, :value => @current_task.name || '' %> <br>
  <%= I18n.t ('description')%> :<br> <%= form.text_area :description, size: "24x6", :value => @current_task.description || '' %> <br>
  <%= form.submit (I18n.t ('save')) %>
<% end %>
